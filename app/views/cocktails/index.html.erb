<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1611819254052-ddd654b97300?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1189&q=80);">
  <div class="container">
    <h1>The Ultimate Cocktail Experience</h1>
    <p>Toxicity has never looked this good</p>
      <%= link_to 'New Cocktail', new_cocktail_path, class:"btn btn-outline-success" %>
  </div>
</div>

<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-12 col-md-6 col-lg-3">
        <% if @cocktail.photo.attached? %>
          <div class="card-body card text-white bg-dark mb-3 mt-3" style="max-width: 18rem background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= cl_image_path @cocktail.photo.key, height: 300, width: 400, crop: :fill %>);">
          <%= link_to cocktail.name, cocktail_path(cocktail) %>
          </div>
        <% else %>
          <div class="card-body card text-white bg-dark mb-3 mt-3" style="max-width: 18rem;">
          <%= link_to cocktail.name, cocktail_path(cocktail) %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>


<div class="container">
 <div class="row justify-content-center">
    <div class="col-md-8">
      <h1>New Cocktail</h1>

      <%= simple_form_for @cocktail do |f| %>
        <div class="form-inputs">
        <%= f.input :name %>
        </div>
        <div class="form-actions">
        <%= f.button :submit, class:"btn btn-outline-success" %>
        <%= link_to 'Back to Your Cocktails', cocktails_path, class:"btn btn-outline-success" %>
        </div>
      <% end %>
        
    </div>
   </div>
</div>
